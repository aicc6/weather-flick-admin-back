# Weather Flick Admin Backend 환경 변수 예제

# 애플리케이션 설정
APP_NAME="Weather Flick Admin API"
APP_VERSION="1.0.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=true
HOST="0.0.0.0"
PORT=9000

# 데이터베이스 설정
DATABASE_URL="postgresql://username:password@localhost:5432/weather_flick"
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# 보안 설정
SECRET_KEY="your-super-secret-key-change-this-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS 설정
CORS_ALLOWED_ORIGINS="http://localhost:5173,http://localhost:5174,https://weatherflick.com,https://admin.weatherflick.com"
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_ALL_ORIGINS_IN_DEV=true

# Rate Limiting 설정
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT_LIMIT=100
RATE_LIMIT_DEFAULT_WINDOW=60
REDIS_URL="redis://localhost:6379/0"  # Optional, falls back to in-memory if not set

# 보안 헤더 설정
SECURITY_HEADERS_ENABLED=true
ENABLE_HSTS=true
ENABLE_CSP=true
CSP_REPORT_URI="https://api.weatherflick.com/csp-report"

# 입력 검증 설정
MAX_REQUEST_SIZE=10485760  # 10MB
CHECK_SQL_INJECTION=true
CHECK_XSS=true
CHECK_PATH_TRAVERSAL=true
MAX_JSON_DEPTH=10
MAX_STRING_LENGTH=10000

# 외부 API 설정
TOUR_API_KEY="your-tour-api-key"
KMA_API_KEY="your-weather-api-key"
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# 로깅 설정
LOG_LEVEL="INFO"
LOG_FILE="logs/admin_api.log"
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# 모니터링 설정
ENABLE_METRICS=true
METRICS_PORT=9091
ENABLE_HEALTH_CHECK=true

# 이메일 설정 (알림용)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USERNAME="noreply@weatherflick.com"
SMTP_PASSWORD="your-smtp-password"
SMTP_USE_TLS=true

# 파일 업로드 설정
UPLOAD_MAX_SIZE=5242880  # 5MB
ALLOWED_UPLOAD_EXTENSIONS=".jpg,.jpeg,.png,.gif,.pdf,.doc,.docx"
UPLOAD_DIRECTORY="uploads/"

# 세션 설정
SESSION_TIMEOUT=3600  # 1 hour
SESSION_COOKIE_SECURE=true  # HTTPS only in production
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE="Strict"

# API 버전 관리
API_VERSION="3.0"
ENABLE_API_VERSIONING=true
DEFAULT_API_VERSION="3.0"

# 백업 설정
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400  # 24 hours
BACKUP_RETENTION_DAYS=30

# 배치 API 서버 설정
BATCH_API_URL="http://localhost:8001"
BATCH_API_TIMEOUT=30

# 기타 설정
TIMEZONE="Asia/Seoul"
LOCALE="ko_KR"
PAGINATION_DEFAULT_LIMIT=20
PAGINATION_MAX_LIMIT=100