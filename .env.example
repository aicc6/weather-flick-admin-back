# Weather Flick Admin Backend 환경 변수 설정
# 실제 사용 시에는 이 파일을 .env로 복사하고 실제 값으로 변경하세요

# 기본 설정
DEBUG=true
ENVIRONMENT=development

# 서버 설정
HOST=127.0.0.1
PORT=8001

# 데이터베이스 설정
DATABASE_URL=postgresql://username:password@localhost:5432/weather_flick_admin

# JWT 설정
JWT_SECRET_KEY=your_secret_key_here_change_this_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_MINUTES=10080
ALGORITHM=HS256

# 이메일 설정 (Gmail SMTP)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_FROM=your_email@gmail.com
MAIL_FROM_NAME=Weather Flick Admin
MAIL_STARTTLS=true
MAIL_SSL_TLS=false

# Redis 설정
REDIS_URL=redis://localhost:6379

# 외부 API 키
KMA_API_KEY=your_kma_api_key
WEATHER_API_KEY=your_weather_api_key
KAKAO_API_KEY=your_kakao_api_key
NAVER_CLIENT_ID=your_naver_client_id
NAVER_CLIENT_SECRET=your_naver_client_secret
GOOGLE_API_KEY=your_google_api_key
KOREA_TOURISM_API_KEY=your_kto_api_key

# 프론트엔드 설정
ADMIN_FRONTEND_URL=http://localhost:5174